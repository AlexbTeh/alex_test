<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/mulish_medium</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <declare-styleable name="placeholder">
        <attr name="icon" format="reference" />
        <attr name="title_text" format="reference" />
        <attr name="subtitle_text" format="reference" />
        <attr name="button_text" format="reference" />
    </declare-styleable>

</resources>